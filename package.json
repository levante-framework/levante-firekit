{
  "name": "@bdelab/roar-firekit",
  "version": "3.0.5",
  "description": "A library to facilitate Firebase authentication and Cloud Firestore interaction for ROAR apps",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json --verbose",
    "testOpenHandles": "jest --config jestconfig.json --verbose --detectOpenHandles --runInBand",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "doc": "npx typedoc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "emulate:admin": "source src/__tests__/__utils__/emulate_admin.sh",
    "emulate:assessment": "source src/__tests__/__utils__/emulate_assessment.sh",
    "emulate:start": "npm run emulate:admin && npm run emulate:assessment",
    "emulate:stop": "ps -e | grep firebase | grep -v 'grep' | grep -v 'rg' | sed -e 's/^[ \t]*//' | tr -s ' ' | cut -d ' ' -f 1 | xargs kill"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richford/roar-firekit.git"
  },
  "keywords": [
    "firebase",
    "roar",
    "authentication",
    "cloud",
    "firestore",
    "reading",
    "literacy",
    "dyslexia"
  ],
  "author": "Adam Richie-Halford <richiehalford@gmail.com> (https://richiehalford.org/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/richford/roar-firekit/issues"
  },
  "homepage": "https://github.com/richford/roar-firekit#readme",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@firebase/rules-unit-testing": "^2.0.2",
    "@types/caller": "^1.0.0",
    "@types/decomment": "^0.9.2",
    "@types/dot-object": "^2.1.2",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.192",
    "@types/papaparse": "^5.3.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.5.0",
    "node-firestore-import-export": "github:cuong0993/node-firestore-import-export",
    "prettier": "^2.5.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@google-cloud/storage": "^6.9.4",
    "caller": "^1.1.0",
    "decomment": "^0.9.5",
    "dot-object": "^2.1.4",
    "exponential-backoff": "^3.1.1",
    "firebase": "^9.18.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "papaparse": "^5.4.1",
    "status-code-enum": "^1.0.0",
    "uuid": "^8.3.2"
  }
}
