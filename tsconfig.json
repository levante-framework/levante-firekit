{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src"
        ],
        "entryPointStrategy": "expand",
        "exclude": [
            "src/__tests__/"
        ],
        "out": "docs"
    }
}